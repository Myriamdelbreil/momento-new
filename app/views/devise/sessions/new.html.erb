<div class="devise-style">
  <div class="signin-signup">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h2>Welcome back !</h2>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, label:"Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Se connecter" %>
      </div>
    <% end %>
    <div class="devise-links">
      <p>Pas encore inscrit ? <%= link_to "Inscris-toi", new_registration_path(resource_name) %></p>
      <p>Mot de passe oubli√© ? <%= link_to "Clique ici", new_password_path(resource_name) %></p>
    </div>
  </div>
</div>
